{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src/",
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
  },
  "plugins": [
    {
      "name": "next"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}